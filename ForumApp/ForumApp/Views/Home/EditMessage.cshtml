@model DataAccessLayer.Models.Message
@using ForumApp.Properties;

<div class="modal show">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close back" data-dismiss="modal" area-hidden="true">X</button>
                <h4>@Resources.EditMessageTitle</h4>
            </div>
            <div class="modal-body">
                <div class="box">
                    <div class="content registerBox">
                        <div class="form text-center">
                            @using (Html.BeginForm("EditMessage", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.MessageID)
                                <div>@Html.TextAreaFor(model => model.TextMessage, 5, 40, new { @class = "textarea" }) @Html.ValidationMessageFor(model => model.TextMessage)</div>
                                <input class="btn btn-register" type="submit" value="@Resources.EditMessageTitle" name="commit">
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>