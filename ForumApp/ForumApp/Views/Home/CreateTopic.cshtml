@model DataAccessLayer.Models.Topic
@using ForumApp.Properties;

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>@Resources.CreateTopicTitle</h4>
    </div>
    <div class="modal-body">
        <div class="box">
            <div class="content registerBox">
                <div class="form">
                    @using (Html.BeginForm("CreateTopic", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.TextBoxFor(model => model.TopicName, new { @class = "form-control", @placeholder = Resources.TopicName }) @Html.ValidationMessageFor(model => model.TopicName)
                        @Html.TextAreaFor(model => model.TopicMessage, new { @class = "form-control", @placeholder = Resources.Message, @style = "margin-bottom: 5px;" }) @Html.ValidationMessageFor(model => model.TopicMessage)
                        <input class="btn btn-register" type="submit" value="@Resources.CreateTopicTitle" name="commit">
                    }
                </div>
            </div>
        </div>
    </div>
</div>




